/* pages/scheduleDetail/scheduleDetail.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}

.scheduleInfoLayout {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 200rpx;
}

.teamNameTv {
  color: #888888;
  font-size: 30rpx;
}

.scheduleStatusTipTv {
  width: 200rpx;
  height: 20px;
  color: rgba(0, 0, 0, 0.58);
  font-size: 30rpx;
  text-align: center;
  font-family: PingFangSC-regular;
  margin-top: 10rpx;
  
}

.scheduleScoreLayout {
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: space-between;
}

.scoreTv {
  font-size: 60rpx;
}

.scheduleTimeLayout {
  margin-top: 10rpx;
}

.scheduleTimeInfoTv {
  display: block;
  text-align: center;
}

.scheduleInfoCenterItemLayout {
  width: 50%;
  justify-content: flex-start;
}

.scheduleInfoLRItemLayout {
  width: 25%;
  justify-content: center;
}

.scheduleInfoItemLayout {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  
}

.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 77rpx;
    line-height: 77rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}

.swiper-tab-item{
    width: 30%; 
    color:white;
}
.active{
    border-bottom: 4rpx solid #F65959;
}

swiper{
  flex: 1;
  text-align: center;
}

/* parent 下面的所有view的样式 */
swiper-item view {
  display: flex;
  flex-direction: column;
  align-content: center;
  width: 100%;
  height:100%;
}
.underDevelopLayout {
  background: #BBB6B6;
  justify-content: center;
}

.underDevelopTv {
  color: #999595;
  font-size: 90rpx;
  text-align: center;
}

.articleTv {
  font-size: 30rpx;
}