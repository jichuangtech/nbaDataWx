/* pages/schedule/schedule.wxss */

.timeLayout {
  display: flex;
  width:100%;
  height:40px;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.dateLayout {
  display:flex;
  height: 30px;
  
  align-items: center;
  flex-direction: row;
  justify-content: center;
}
.leftNav {
  margin-right: 30%;
}
.rightNav {
  margin-left: 30%;
}

.dateTitile {
  color: white;
  font-size: 15px;
}
.pickLayout {
  justify-self: center;
}

.topSpaceLayout {
  width: 100%;
  height: 0.5px;
}

.spaceLayout {
  width: 100%;
  height: 18px;
}

.scheduleLayout {
  display: flex;
  height: 220rpx;
  margin-left: 0.7%;
  width: 98%;
  border-radius: 10px 10px 10px 10px; 
  color: rgba(16, 16, 16, 1);
  font-size: 14px;
  text-align: center;
  font-family: Arial;
  border: 1px solid rgba(187, 187, 187, 1);
  margin-top: 10px;
  flex-direction: row;
}

.scheduleItemLeftSpan {
  width: 20%;
}
.scheduleItemCentertSpan {  
  width: 60%;
  bottom: 5rpx;
}
.scheduleItemRightSpan {
  width: 20%;
}

.scheduleItemSpan {
  display: inline-flex;
  flex-direction: column;
  height: 100%;
  align-items: center;
  justify-content: flex-start;
  position: relative;
}

.matchStatusLayout {
  width: 150px;
  height: 20px;
  line-height: 20px;
  border-radius: 0px 0px 20px 20px; 
  background-color: rgba(229, 28, 35, 1); 
  text-align: center;
  border: 1px solid rgba(187, 187, 187, 1);
  color: white;
}

.teamNameTv {
  overflow:auto;
  white-space:nowrap;
  font-size: 12px;
  color:  rgba(187, 187, 187, 1);
  position: absolute;
  top: 68%;
}

.teamLogoLayout {
  position: absolute;
  top: 20%;
}

.teamTime {
  color: black;
  font-size: 25px;
}
    
.rangfenTv {
  display: inline-flex;
  transform: rotate(-45deg);
  position: relative;
  top: -30rpx;
  left: -52rpx;
}

.rangfenLayout {
  display: flex;
  width: 0px;
  height: 0px;
  border-color:  rgba(240, 231, 231, 1) transparent transparent rgba(240, 231, 231, 1);
  border-width: 52rpx;
  border-style: solid;
  align-self: flex-start;
  flex-direction: row;
  border-top-left-radius: 10px;
}

.scoreLayout {
  display: flex;
  flex-direction: row;
  width: 100%;
  position: relative;
  top: 8%;
  justify-content:space-around;
  align-items: center;
}

.scoreTv {
  font-size: 60rpx;
}

.degreeLayout {
  display: inline-flex;
}

.starLogo {
  width: 45rpx;
  height: 45rpx;
}
.gameInfoBtnLayout {
  width: 100px;
  height: 24px;
  border-radius: 8px 8px 8px 8px; 
  background-color: rgba(255, 255, 255, 1); 
  color: rgba(16, 16, 16, 1);
  font-size: 14px;
  text-align: center;
  font-family: Microsoft Yahei;
  border: 1px solid rgba(21, 38, 147, 1);
  align-items: center;

}

.gameProspectLayout {
  width: 100px;
  height: 24px;
  border-radius: 8px 8px 8px 8px;
  background-color: rgba(21, 38, 147, 1); 
  color: rgba(255, 255, 255, 1);
  font-size: 14px;
  text-align: center;
  font-family: Microsoft Yahei;
  border: 1px solid rgba(21, 38, 147, 1);
  align-items: center;
}

.playTypeLayout {
   align-items: center;
   position: relative;
   top: 9rpx;
}

.gameStatusTv {
  text-align: center;
  position: relative;
  top: 12rpx;
}